{
  "manifest_version": 2,

  "name": "ShortenURL",
  "short_name": "ShortenURL",
  "version": "1.0",
  "author": "Henrik Br√§nnlund",

  "description": "Shortens an url using your favorite shortener.",
  "icons": {
    "16": "/images/icon16.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "/images/icon19.png",
      "38": "/images/icon38.png"
    },
    "default_title": "ShortenURL",
    "default_popup": "/src/www/popup.html"
  },

  "offline_enabled": false,

  "options_page": "/src/www/options.html",

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ]

}
